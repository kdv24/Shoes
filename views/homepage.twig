<!DOCTYPE html>

<html>
  <head>
    <link rel="stylesheet" href="/css/normalize.css" media="all">
    <link rel="stylesheet" href="/css/skeleton.css" media="all">
    <link rel="stylesheet" href="/css/main.css" media="all">
    <title>Shoe Store</title>
  </head>
  <body>
    <div class="container">
        <div class="twelve columns">
      <div class="row header">
          <h2>Welcome to the Shoe Store Front</h2>
        </div>
      </div>

      <div class="row">
        <div class="six columns">

          <div class="row">
            <div class="eight columns">
              <h3>Stores</h3>
            </div>

            <div class="four columns">
              <form class="" action="/" method="post">
                <input type="hidden" name="_method" value="delete">
                <input type="hidden" name="stores" value="delete">

                <button class="caution" type="submit">Clear All</button>
              </form>
            </div>

            <div class="twelve columns">
              <form action="/stores" method="post">
                <label for="add_store">Add a Store</label>
                <input type="text" name="add_store" id="add_store">

                <button class="button-primary" type="submit">Add</button>
              </form>
            </div>
          </div>

          <div class="twelve columns">
            {% if store_array is not empty %}
              {% for store in store_array %}
                <div class="store">
                  <p>
                    <a href="/stores/{{ store.getId() }}">{{ store.getName() }}</a>
                  </p>
                </div>
              {% endfor %}
            {% else %}
              <div class="store">
                <p>
                  No stores have been added.
                </p>
              </div>
            {% endif %}
          </div>

        </div>

        <div class="six columns">
          <div class="row">
            <div class="eight columns">
              <h3>Brands</h3>
            </div>
            <div class="four columns">
              <form class="" action="/" method="post">
                <input type="hidden" name="_method" value="delete">
                <input type="hidden" name="brands" value="delete">

                <button class="caution" type="submit">Clear All</button>
              </form>
            </div>

            <div class="twelve columns">
              <form class="" action="/brands" method="post">
                <label for="add_brand">Add a Brand</label>
                <input type="text" name="add_brand" id="add_brand">

                <button class="button-primary" type="submit">Add</button>
              </form>
            </div>

            <div class="twelve columns">
              {% if brand_array is not empty %}
                {% for brand in brand_array %}
                  <div class="brand">
                    <p>
                      <a href="/brands/{{ brand.getId() }}">{{ brand.getName() }}</a>
                    </p>
                  </div>
                {% endfor %}
              {% else %}
                <div class="brand">
                  <p>
                    No brands have been added.
                  </p>
                </div>
              {% endif %}
            </div>

          </div>
        </div>
      </div>
    </div>
  </body>
</html>
