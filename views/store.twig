<!DOCTYPE html>

<html>
  <head>
    <link rel="stylesheet" href="/css/normalize.css" media="all">
    <link rel="stylesheet" href="/css/skeleton.css" media="all">
    <title>Shoe Store</title>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="twelve columns">
          <h2>Welcome to the Shoe Store Front</h2>
          <p>
            <a href="/">Home</a> &gt; {{ store.getName() }}
          </p>
        </div>
      </div>

      <div class="row">
        <div class="six columns">

          <div class="row">
            <div class="eight columns">
              <h3>{{ store.getName() }}</h3>
            </div>

            <div class="four columns">
              <form class="" action="/stores" method="post">
                <input type="hidden" name="_method" value="delete">
                <input type="hidden" name="delete_store" value="{{ store.getId() }}">

                <button type="submit">Delete</button>
              </form>
            </div>

            <div class="twelve columns">
              <form action="/stores/{{ store.getId() }}" method="post">
                <input type="hidden" name="_method" value="patch">

                <label for="edit_store">Update Name</label>
                <input type="text" name="edit_store" id="edit_store">

                <button class="button-primary" type="submit">Update</button>
              </form>
            </div>

            <div class="row">
                <h4>{{ store.getName()}} Brands</h4>

              {% if brand_array is not empty %}
                {% for brand in brand_array %}
                  <div class="brand">
                    <p>
                      <a href="/brands/{{ brand.getId() }}">{{ brand.getName() }}</a>
                    </p>
                  </div>
                {% endfor %}
              {% endif %}

            </div>
          </div>
        </div>
        <!-- End store name -->

        <div class="six columns">
          <div class="row">
            <h4>All Brands</h4>

            {% if all_brands is not empty %}
              {% for brand in all_brands %}
                <div class="brand">
                  <p>
                    {{ brand.getName() }}
                    <form action="/stores/{{ store.getId() }}" method="post">
                      <input type="hidden" name="store_brand" value="{{ brand.getId() }}">
                      <button class="button" type="submit">Add</button>
                    </form>
                  </p>
                </div>
              {% endfor %}
            {% endif %}

          </div>
        </div>
        <!-- End all brands -->

      </div>
      <!-- end row -->
    </div>
    <!-- end container -->
  </body>
</html>
